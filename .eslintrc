{
  "parser": "babel-eslint",
  "extends": ["standard", "standard-react"],
  "env": {
    "es6": true
  },
  "plugins": ["react"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    // allow specifying true explicitly for boolean props
    "react/jsx-boolean-value": 0,
    "semi": [2, "always"]
  }
}
